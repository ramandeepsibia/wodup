.navigation.navigation-desktop {
  position: relative;
  display: none;
  width: 100%;
  font-size: 0;
  -webkit-font-smoothing: antialiased;
  text-align: center;

  @include breakpoint(m-up) {
    display: table;
  }

  li {
    z-index: 100;
    display: inline-block;
  }

  .navigation-menu a {
